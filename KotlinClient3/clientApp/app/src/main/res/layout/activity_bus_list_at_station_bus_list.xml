<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="20dp">



    <TextView
        android:id="@+id/routeNumTextView"
        android:fontFamily="@font/imcresoojin"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tooltipText="TextView"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/busArrivedTime"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tooltipText="TextView"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/routeNumTextView"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/vehId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/busArrivedTime"
        />

</androidx.constraintlayout.widget.ConstraintLayout>